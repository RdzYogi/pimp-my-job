<div class="d-flex mt-3 justify-content-center">
  <h1>My Dashboard</h1>
</div>

    <div class="flex-container2">
      <div>My Posted Jobs</div>
      <div>My Offers</div>
      <div>Received Offers</div>
    </div>

<div class="flex-container1">
    <div>
      <% current_user.jobs.each do |job| %>
      <ul class="list-group">
        <li class="list-group-item list-group-secondary-info">
          <%= job.name %>
          <%= link_to "Edit job", edit_job_path(job) %>
        </li>
      </ul>
      <% end %>
    </div>

    <div class="border border-dark">
      <% if current_user.offers.empty? %>
        <p><%= "No Offers made" %></p>
      <% else %>
        <% current_user.offers.each do |offer| %>
          <%= offer.comment %>
        <% end %>
      <% end %>
    </div>

    <div class="border border-danger">
      <% my_offers = [] %>
        <% current_user.jobs.each do |job| %>
          <% unless job.offers.nil? %>
            <% job.offers.each do |offer| %>
              <% my_offers << offer %>
            <% end %>
          <% end %>
        <% end %>
        <% if my_offers.empty? %>
          <p><%= "No Offers received" %></p>
        <% else %>
          <% my_offers.each do |offer| %>
            <p><%= offer.comment %></p>
          <% end %>
        <% end %>
    </div>
</div>
