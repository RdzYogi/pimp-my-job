<div class="container show-main-controller">
  <div class="show-details-main-container">
    <div class="show-title-container row">
      <div class="show-title col-7">
        <div class="main title">
          <h4><%= @job.name %></h4>
        </div>
        <div class="main-details">
          <p>Posted by:  <%= @job.user.name %></p>
          <p>Deadline: <%= @job.deadline.day %>/<%= @job.deadline.month %>/<%= @job.deadline.year %></p>
        </div>
      </div>
      <div class="show-budget col-5">
        <p>Budget:<%= @job.price %>€</p>
      </div>
    </div>
    <div class="show-details-container">
      <h4>Details:</h4>
      <p><%= @job.description %></p>
    </div>
    <div class="show-location-container">
      <h4>Location:</h4>
      <p><%= @job.address.nil? ? " unspecified": @job.address %></p>
    </div>
  </div>
  <div class="show-offers-container" overflow-y="scroll">
    <%= render 'offers/form-offer' %>
    <h4>Offers:</h4>
    <div class="show-offers">
      <% @job.offers.each do |offer| %>
        <div class="show-offer">
          <div class="show-offer-title">
            <h5><%= offer.user.name %></h5>
          </div>
          <div class="show-offer-details">
            <p><%= offer.comment %></p>
          </div>
          <div class="show-offer-price">
            <p><%= offer.bid %>€</p>
          </div>
        </div>
      <% end %>
  </div>
</div>
